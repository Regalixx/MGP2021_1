<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/cyber">


    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="1dp"
        android:layout_marginRight="327dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/backbutton"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/AboutTitle"
        android:layout_width="353dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="66dp"
        android:layout_marginRight="-34dp"
        android:text="About The Game"
        android:textColor="#00F1FF"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/AboutDesc"
        android:layout_width="400dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="140dp"
        android:layout_marginRight="2dp"
        android:text="Your objective is to fight against the cyber threats that come at you by dodging or attacking them."
        android:textColor="#00d933"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/AboutDesc2"
        android:layout_width="391dp"
        android:layout_height="96dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="229dp"
        android:layout_marginRight="6dp"
        android:text="Encounter different types of cyber threats such as scammers, bullies, and addiction. Each cyber threat has their own attack patterns and weaknesses."
        android:textColor="#00d933"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/AboutDesc3"
        android:layout_width="391dp"
        android:layout_height="96dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="351dp"
        android:layout_marginRight="6dp"
        android:text="Clear all 3 waves in order to win the game."
        android:textColor="#00d933"
        android:textSize="18sp" />


</RelativeLayout>